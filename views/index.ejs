<!doctype html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport"
          content="width=device-width, user-scalable=no, initial-scale=1.0, maximum-scale=1.0, minimum-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <!--Bootstrap Core Library-->
    <link rel="stylesheet" href="./bootstrap-3.3.7/dist/css/bootstrap.min.css">
    <!--Theme-->
    <link rel="stylesheet" href="./stylesheets/navigation.css">
    <link rel="stylesheet" href="./stylesheets/fatboneBlog.css">
    <!--Font-->
    <link rel="stylesheet" href="./stylesheets/font-awesome-4.7.0/css/font-awesome.min.css">
    <title><%= title%></title>
</head>
<body>

<%- include('frontend/navbar')%>
<%- include('frontend/header')%>

<div class="container">
    <div class="row">
        <div class="col-lg-8 col-lg-offset-2 col-md-10 col-md-offset-1">
            <% for(var i = 0; i < articles.length; i ++){ %>
                <div class="post-preview">
                    <a href="/article?title=<%= articles[i].title %>">
                        <h2 class="post-title"><%= articles[i].title %></h2>
                        <h3 class="post-subtitle">Problems look mighty small from 150 miles up</h3>
                    </a>
                    <p class="post-meta">Post by Fat-Bone on <%= articles[i].create_at %>.</p>
                </div>
            <%}%>
        </div>
    </div>
</div>

<%- include('footer')%>